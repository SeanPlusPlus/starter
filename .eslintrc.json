{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "trailingComma": "all",
        "endOfLine": "auto",
        "singleQuote": false,
        "printWidth": 80
      }
    ],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "@typescript-eslint/no-unused-vars": "warn"
  }
}
